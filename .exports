# Make atom the default editor.
export EDITOR=atom-beta;

# nvm use will not, by default, create a "current" symlink.
export NVM_SYMLINK_CURRENT=true

# Git Setup
export GIT_EMAIL_DOMAIN="sscotth.io"
export GIT_AUTHOR_NAME="Scott Humphries"
export GIT_AUTHOR_EMAIL=git@$GIT_EMAIL_DOMAIN
export GIT_COMMITTER_NAME=$GIT_AUTHOR_NAME
export GIT_COMMITTER_EMAIL=$GIT_AUTHOR_EMAIL

git config --global user.name $GIT_AUTHOR_NAME --replace-all
git config --global user.email $GIT_AUTHOR_EMAIL --replace-all
git config --global core.editor "atom-beta --wait" --replace-all
git config --global push.default simple --replace-all

git config --global url.ssh://git@github.com/.insteadOf https://github.com/ --replace-all
git config --global url.ssh://git@bitbucket.org/.insteadOf https://bitbucket.org/ --replace-all

git config --global alias.co checkout --replace-all
git config --global alias.lg  "log --pretty=format:'%Cred%h %C(bold blue)[%an]%C(blue) -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --graph"
git config --global alias.log "log --pretty=format:'%Cred%h %C(bold blue)[%an]%C(blue) -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit"
